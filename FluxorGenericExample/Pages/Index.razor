@page "/"

@inherits Fluxor.Blazor.Web.Components.FluxorComponent

@using FluxorGenericExample.Store.Actions.ShowDialog1
@using FluxorGenericExample.Store.Actions.ShowDialog2

@inject IDispatcher Dispatcher
@inject IDialogService DialogService

<MudButton OnClick="ShowDialog1">Show Dialog 1</MudButton>
<MudButton OnClick="ShowDialog2">Show Dialog 1</MudButton>

@code{
    protected override void OnInitialized()
    {
        base.OnInitialized();
    }

    private void ShowDialog1()
    {
        Dispatcher.Dispatch(new ShowDialog1Action(DialogService));
    }

    private void ShowDialog2()
    {
        Dispatcher.Dispatch(new ShowDialog2Action(DialogService));
    }
}